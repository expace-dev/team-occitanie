{% extends 'base.html.twig' %}

{% block title %}New Photos{% endblock %}

{% block body %}
    {{ component('breadcrumbs', {'title': block('title')}) }}
    <section class="auth">
        <div class="container">
            <h2>Ajouter une photo</h2>
            <div class="row justify-content-center">
                <div class="info-box">
                    {{ form_start(form) }}
                        <div class="col-lg-12">
                            {{ form_label(form.url) }}
                            {{ form_widget(form.url) }}
                            {{ form_errors(form.url) }}
                        </div>
                        <div class="col-lg-12 text-start">
                            {{ form_widget(form.statut) }}
                            <input class="btn btn-primary mt-2" type="submit" value="Envoyer la photo">
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
