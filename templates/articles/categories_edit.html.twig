{% extends 'base.html.twig' %}

{% block title %}Edit Articles{% endblock %}

{% block body %}
    <section class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="index.html">Home</a></li>
                <li>Blog</li>
            </ol>
            <h2>Blog</h2>
        </div>
    </section><!-- End Breadcrumbs -->
    <section class="auth">
        <div class="container">
            <div class="row justify-content-center">
                <div class="section-title">
                    <h2>Editer une cat√©gorie</h2>
                </div>
                <div class="info-box" style="width: 600px;">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-lg-12">
                                {{ form_label(form.nom) }}
                                {{ form_widget(form.nom) }}
                                {{ form_errors(form.nom) }}
                            </div>
                            <div class="col-lg-12 mb-5">
                                {{ form_label(form.parent) }}
                                <div class="custom-select">
                                    {{ form_widget(form.parent) }}
                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <input type="submit" class="btn btn-primary" value="Enregistrer les modifiactions">
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}