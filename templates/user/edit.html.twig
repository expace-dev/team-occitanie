{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    {{ component('breadcrumbs', {'title': block('title')}) }}
    <section class="auth">
        <div class="container">
            <div class="row justify-content-center">
                <div class="section-header">
                    <h2>Editer le profil</h2>
                </div>
                <div class="info-box">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-lg-6">
                                {{ form_label(form.poste) }}
                                <div class="custom-select">
                                    {{ form_widget(form.poste) }}
                                </div>
                                {{ form_errors(form.poste) }}
                            </div>
                            <div class="col-lg-6">
                                {{ form_label(form.role) }}
                                <div class="custom-select">
                                    {{ form_widget(form.role) }}
                                </div>
                                {{ form_errors(form.role) }}
                            </div>
                            <div class="col-lg-6">
                                {{ form_label(form.username) }}
                                {{ form_widget(form.username) }}
                                {{ form_errors(form.username) }}
                            </div>
                            <div class="col-lg-6">
                                   {{ form_label(form.email) }}
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="col-lg-12">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {{ form_help(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>
                            <div class="col-lg-12 text-start">
                                <input class="btn btn-primary mt-2" type="submit" value="Enregistrer la publication">
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}