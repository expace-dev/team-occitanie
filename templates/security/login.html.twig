{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

{{ component('breadcrumbs', {'title': block('title')}) }}

<section class="auth">
    <div class="container">
        <div class="row justify-content-center">
            <div class="info-box" style="width: 600px;" data-aos="fade-up" data-aos-delay="100">
                {% if error %}
                    <div id="notyf-message" class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form method="post">
                    <div class="block clear">
                        <label for="inputEmail" class="required">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required>
                    </div>
                    <div class="block clear">
                        <label for="inputPassword" class="required">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div style="text-align:center;">
                        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a> | <a href="{{ path('app_register') }}">Pas de compte ?</a>
                    </div>
                    <div class="text-center mt-4">
                        <input class="btn btn-primary" type="submit" name="submit" value="Se connecter">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


























{% endblock %}
